    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Mobile menu toggle
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });

            // Smooth scrolling and active nav link
            const navLinks = document.querySelectorAll('.nav-link');
            const sections = document.querySelectorAll('section');

            function changeActiveLink() {
                let index = sections.length;
                while(--index && window.scrollY + 50 < sections[index].offsetTop) {}
                
                navLinks.forEach((link) => link.classList.remove('active'));
                const activeLink = document.querySelector(`.nav-link[href="#${sections[index].id}"]`);
                if (activeLink) {
                    activeLink.classList.add('active');
                }
            }

            changeActiveLink();
            window.addEventListener('scroll', changeActiveLink);

            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href');
                    const targetSection = document.querySelector(targetId);
                    if (targetSection) {
                        window.scrollTo({
                            top: targetSection.offsetTop - 80,
                            behavior: 'smooth'
                        });
                        if (mobileMenu.classList.contains('hidden') === false) {
                            mobileMenu.classList.add('hidden');
                        }
                    }
                });
            });

            // Skills Chart
            const ctx = document.getElementById('skillsChart').getContext('2d');
            const skillsChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['SQL (PostgreSQL, MySQL)', 'Python (Pandas, NumPy)', 'Tableau', 'Power BI', 'Excel', 'Microsoft Azure', 'PySpark'],
                    datasets: [{
                        label: 'Proficiency',
                        data: [90, 85, 80, 88, 95, 70, 65],
                        backgroundColor: '#ff8c00', /* Vibrant orange for bars */
                        borderColor: '#ff8c00',
                        borderWidth: 1
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            backgroundColor: 'rgba(0, 0, 0, 0.8)',
                            titleColor: '#d4d4d4',
                            bodyColor: '#d4d4d4',
                            borderColor: '#ff8c00',
                            borderWidth: 1,
                            callbacks: {
                                label: function(context) {
                                    return `Proficiency: ${context.raw}%`;
                                }
                            }
                        }
                    },
                    scales: {
                        x: {
                            beginAtZero: true,
                            max: 100,
                            grid: {
                                color: '#333'
                            },
                            ticks: {
                                color: '#d4d4d4'
                            }
                        },
                        y: {
                            grid: {
                                color: '#333'
                            },
                            ticks: {
                                color: '#d4d4d4',
                                autoSkip: false,
                                callback: function(value, index, values) {
                                    const label = this.getLabelForValue(value);
                                    if (label.length > 16) {
                                        return label.match(/.{1,16}/g);
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });

            // Project Data
            const projects = [
                {
                    title: 'Sales and Customer Behavior Analysis',
                    description: 'Analyzed sales and customer data using PostgreSQL, leveraging Window Functions and CTES for customer segmentation by lifetime value. Conducted cohort and retention analysis with Advanced SQL to uncover churn and revenue trends.',
                    tags: ['SQL']
                },
                {
                    title: 'Data Science Job Market EDA',
                    description: 'Utilized Python to analyze over 7000 data science job listings. Cleaned and explored job descriptions leveraging Pandas for data processing. Aggregated and visualized the data using Pandas, Matplotlib, and Seaborn to compile a professional report.',
                    tags: ['Python']
                },
                {
                    title: 'Adventure Works Sales Dashboard',
                    description: 'Analyzed sales performance data of Adventure Works using Power BI dashboards. Processed and transformed data with DAX, Power Query (M), and Excel to ensure data quality and provide insights to stakeholders.',
                    tags: ['Power BI', 'Excel']
                },
                {
                    title: 'COVID-19 Data Exploration',
                    description: 'Extracted and cleaned COVID-19 data using SQL, leveraging Subqueries and CTES for efficient data preparation. Developed interactive dashboards in Tableau to visualize case trends and vaccination progress.',
                    tags: ['SQL', 'Tableau']
                }
            ];

            // Project Filtering
            const gallery = document.getElementById('project-gallery');
            const filterBtns = document.querySelectorAll('.filter-btn');

            function displayProjects(filter) {
                gallery.innerHTML = '';
                const filteredProjects = projects.filter(p => filter === 'all' || p.tags.includes(filter));
                
                if (filteredProjects.length === 0) {
                    gallery.innerHTML = `<p class="text-center col-span-full text-gray-500">No projects found for this category.</p>`;
                    return;
                }

                filteredProjects.forEach(project => {
                    const tagsHtml = project.tags.map(tag => `<span class="tag">${tag}</span>`).join(' ');
                    const card = `
                        <a href="https://shashwateran.github.io/" target="_blank" class="project-card bg-[#222] rounded-lg p-6 flex flex-col">
                            <h3 class="text-xl font-bold text-gray-100 mb-2">${project.title}</h3>
                            <p class="text-gray-400 flex-grow">${project.description}</p>
                            <div class="mt-4 flex flex-wrap gap-2">
                                ${tagsHtml}
                            </div>
                        </a>
                    `;
                    gallery.innerHTML += card;
                });
            }

            filterBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    filterBtns.forEach(b => b.classList.remove('active', 'bg-[#ff8c00]', 'text-[#1a1a1a]'));
                    this.classList.add('active', 'bg-[#ff8c00]', 'text-[#1a1a1a]');
                    displayProjects(this.getAttribute('data-filter'));
                });
            });

            // Initial display
            displayProjects('all');
            document.querySelector('.filter-btn.active').classList.add('bg-[#ff8c00]', 'text-[#1a1a1a]');


            // Fade-in on scroll animation
            const faders = document.querySelectorAll('.fade-in');
            const appearOptions = {
                threshold: 0.2
            };
            const appearOnScroll = new IntersectionObserver(function(entries, appearOnScroll) {
                entries.forEach(entry => {
                    if (!entry.isIntersecting) {
                        return;
                    } else {
                        entry.target.classList.add('is-visible');
                        appearOnScroll.unobserve(entry.target);
                    }
                });
            }, appearOptions);

            faders.forEach(fader => {
                appearOnScroll.observe(fader);
            });

            // Contact form handler
            const contactForm = document.getElementById('contact-form');
            contactForm.addEventListener('submit', function(e) {
                e.preventDefault();
                const name = document.getElementById('name').value;
                const email = document.getElementById('email').value;
                const message = document.getElementById('message').value;
                const subject = `Message from ${name} via your portfolio`;
                const body = `Name: ${name}\nEmail: ${email}\n\nMessage:\n${message}`;

                const mailtoLink = `mailto:shashwateran17@gmail.com?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
                window.location.href = mailtoLink;
            });
        });
    </script>
</body>
</html>
